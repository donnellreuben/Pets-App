<section class="vh-100" style="background-color: #2069e0;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="<https://imgs.search.brave.com/08hOfc30Aaez2vsvqPxLNYtA84sFSMI6TSSr71OptrY/rs:fit:1080:1200:1/g:ce/aHR0cHM6Ly9jZG4u/d2FsbHBhcGVyc2Fm/YXJpLmNvbS80My8y/OS9Nc2h2Sm0uanBn>"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

            <!--Form -->

                <%= form_with method: "post", url: "/sessions", class: "mb-4" do |form| %>

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: "#ff6219";"></i>
                    <span class="h1 fw-bold mb-0">Pet Track</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                  <div class="form-outline mb-4">
                    <%= form.email_field :email, class: "form-control form-control-lg", id: "form2Example17" %>
                    <%= form.label :email, class: "form-label", for: "form2Example17" %>

                  </div>

                  <div class="form-outline mb-4">
                    <%= form.password_field :password, class: "form-control form-control-lg", id: "form2Example27" %>
                    <%= form.label :password, class: "form-label", for: "form2Example27" %>
                  </div>

                  <div class="pt-1 mb-4">
                    <%= form.submit "Login", class: "btn btn-dark btn-lg btn-block" %>
                  </div>

                  <%# <a class="small text-muted" href="#!">Forgot password?</a> %>
                  <p class="mb-5 pb-lg-2";">Don't have an account? <%= link_to "Register here", "/signup", style: "color: #2069e0;" %></p>
                  <%= link_to "Terms of use.", "#!", class: "small text-muted" %>
                  <%= link_to "Privacy policy", "#!", class: "small text-muted" %>
                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
