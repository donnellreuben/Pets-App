<!---SIGNUP--->

<section class="vh-100" style="background-color: #2069e0;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <%= form_with model: @user do |form| %>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.text_field :name, class: "form-control", id: "form3Example1c" %>
                      <%= form.label :name, class: "form-label", for: "form3Example1c" %>
                      <% @user.errors.full_messages_for(:name).each do |message| %>
                        <div><%= message %></div>
                      <% end %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.email_field :email, class: "form-control", id: "form3Example3c" %>
                      <%= form.label :email, class: "form-label", for: "form3Example3c" %>
                      <% @user.errors.full_messages_for(:email).each do |message| %>
                        <div><%= message %></div>
                      <% end %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.password_field :password, class: "form-control", id: "form3Example4c" %>
                      <%= form.label :password, class: "form-label", for: "form3Example4c" %>
                      <% @user.errors.full_messages_for(:password).each do |message| %>
                        <div><%= message %></div>
                      <% end %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.password_field :password_confirmation, class: "form-control", id: "form3Example4cd" %>
                      <%= form.label :password_confirmation, class: "form-label", for: "form3Example4cd" %>
                      <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
                        <div><%= message %></div>
                      <% end %>
                    </div>
                  </div>

                  <div class="form-check d-flex justify-content-center mb-5">
                    <%= form.check_box :terms_of_service, class: "form-check-input me-2", id: "form2Example3c" %>
                    <label class="form-check-label" for="form2Example3">
                      I agree all statements in <a href="#!">Terms of service</a>
                    </label>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= form.submit "Register", class: "btn btn-primary btn-lg" %>
                  </div>
                <% end %>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://imgs.search.brave.com/-TbaTPok3q4Xi_Ut1hJUYjbf53XwOlm3en6fEeGDTu4/rs:fit:948:225:1/g:ce/aHR0cHM6Ly90c2U0/LmV4cGxpY2l0LmJp/bmcubmV0L3RoP2lk/PU9JUC5FVG5UM2t5/aFpzTm1uN0RYR0hs/VzJnSGFEdCZwaWQ9/QXBp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
